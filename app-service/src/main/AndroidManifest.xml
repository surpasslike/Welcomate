<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 权限声明将合并到主应用，这里不再需要 -->

    <application>
        <!-- 
            服务现在是应用内服务，不再需要导出或设置权限。
            当 app-client 绑定服务时，可以直接通过类名进行，更安全高效。
        -->
        <service
            android:name=".service.AdminService"
            android:enabled="true"
            android:exported="false" />

        <!-- 
            这些 Activity 将由主应用 app-client 启动。
            exported="false" ���安全的默认设置。
        -->
        <activity
            android:name=".ui.admin.AdminRegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.admin.AdminDashboardActivity"
            android:exported="false" />
        <activity
            android:name=".ui.admin.AdminLoginActivity"
            android:exported="false" />
        
        <!-- 
            移除了 MainActivity 的 LAUNCHER intent-filter，
            因为它不再是独立的启动项。
            如果这个 MainActivity 仍有用途，可以保留，否则可以删除。
            暂时保留 activity 声明。
        -->
        <activity
            android:name=".MainActivity"
            android:exported="false">
        </activity>
    </application>

</manifest>